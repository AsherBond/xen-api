(ocamlyacc xn_cfg_parser)
(ocamllex xn_cfg_lexer)

(executable
  (name main)
  (public_name xenops-cli)
  (package xapi-xenopsd-cli)
  (libraries
      cmdliner
      re
      rpclib
      rpclib.json
      threads
      uuidm
      xapi-idl
      xapi-idl.xen
  )
  (preprocess (pps ppx_deriving_rpc))
)

(rule
 (with-stdout-to
  xenops-cli.1
  (run %{dep:main.exe} --help=groff)
 )
)

(install
 (section man)
 (files xenops-cli.1)
 (package xapi-xenopsd-cli)
)
