(library
  (name httpsvr)
  (public_name http-svr)
  (wrapped false)
  (modules (:standard \ http_test radix_tree_test test_client test_server))
  (preprocess (pps ppx_deriving_rpc))
  (libraries
    astring
    base64
    rpclib
    sha
    stunnel
    threads.posix
    uuid
    xapi-consts.xapi_version
    xapi-idl
    xapi-idl.updates
    xapi-log
    xapi-stdext-date
    xapi-stdext-pervasives
    xapi-stdext-threads
    xapi-stdext-unix
    xml-light2
  )
)

(executable
  (modes byte exe)
  (name http_test)
  (modules http_test)
  (libraries
    http-svr
    oUnit
  )
)

(executable
  (modes byte exe)
  (name radix_tree_test)
  (modules radix_tree_test)
  (libraries
    http-svr
  )
)

(executable
  (modes byte exe)
  (name test_client)
  (modules test_client)
  (libraries
    http-svr
    oUnit
    xapi-stdext-pervasives
    xapi-stdext-unix
  )
)

(executable
  (modes byte exe)
  (name test_server)
  (modules test_server)
  (libraries
    http-svr
    oUnit
    xapi-stdext-threads
    xapi-stdext-unix
  )
)

(rule
  (alias runtest)
  (package http-svr)
  (deps
    (:x http_test.exe)
  )
  (action (run %{x} -runner sequential -verbose true))
)

(rule
  (alias runtest)
  (package http-svr)
  (deps
    (:x radix_tree_test.exe)
  )
  (action (run %{x}))
)

(rule
  (alias runtest)
  (package http-svr)
  (deps
    test_client.exe
    test_server.exe
    client_server_test.sh
  )
  (action (run bash client_server_test.sh))
)

