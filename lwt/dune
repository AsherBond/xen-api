(* -*- tuareg -*- *)
let coverage_rewriter =
  match Sys.getenv "BISECT_ENABLE" with
  | "YES" -> "(preprocess (pps bisect_ppx))"
  | _ -> ""
  | exception Not_found -> ""

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(library
  (name message_switch_lwt)
  (public_name message-switch-lwt)
  (libraries
    cohttp-lwt-unix
    message-switch-core
    lwt
  )
  %s
)
|} coverage_rewriter
