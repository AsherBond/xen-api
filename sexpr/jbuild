(rule
 ((targets (sExprParser.ml sExprParser.mli))
  (deps (sExprParser.mly))
  (action (run ${bin:ocamlyacc} ${<}))
 ))

(rule
 ((targets (sExprLexer.ml))
  (deps (sExprLexer.mll))
  (action (run ${bin:ocamllex} -q ${<} -o ${@}))
 ))

(library
 ((name sexpr)
  (public_name sexpr)
  (wrapped false)
  (libraries (astring
              threads
              xapi-stdext-threads))
 ))
